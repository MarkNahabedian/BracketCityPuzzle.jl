using BracketCityPuzzle

puzzle = Puzzle("2025-12-08",
                raw"""the [[like some things that are here today, [two days after [-or-no [one might be [asked, but with some desperation] or rhetorical]]terday]]s that you might be told to let be gones]te [a c[[Spanish word that might be accompanied by [the P in POV or G[ma's companion]]ing directly at your temple with your hand at eye level and rotating your extended [â˜€ï¸ [[abbreviation after Main or Wall] follower] â¡ï¸  â¬…ï¸ card ğŸ“‡] finger in tight [selects by drawing a [someone who is bent out of it is agitated]]]mote unipedally ğŸ‡] one ğŸš˜ is actually not a barber one ğŸ’ˆ] opens in California""")

show_puzzle(preduce(puzzle))

set_answer(puzzle, 14, "st")
set_answer(puzzle, 16, "shape")
set_answer(puzzle, 6, "begged")
set_answer(puzzle, 5, "question")
set_answer(puzzle, 4, "yes")
set_answer(puzzle, 3, "tomorrow")
set_answer(puzzle, 2, "gone")
set_answer(puzzle, 1, "by")
set_answer(puzzle, 11, "pa")
set_answer(puzzle, 10, "point")
set_answer(puzzle, 12, "index")           # rotating INDEX finger at temple indicatiing "crazy"
set_answer(puzzle, 9, "loco")             # LOCOmote, LOCO is spanish for crazy.
set_answer(puzzle, 15, "circles")
set_answer(puzzle, 8, "hop")              # cHOP
set_answer(puzzle, 7, "shop")
set_answer(puzzle, 13, "uv")              # bought the answer.  "st" is followed by "uv" in the alphabet.

show_puzzle(preduce(puzzle))

